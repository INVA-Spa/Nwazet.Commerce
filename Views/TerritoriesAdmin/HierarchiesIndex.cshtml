@using Orchard.ContentManagement.MetaData.Models

@model Nwazet.Commerce.ViewModels.HierarchyAdminIndexViewModel

@{ 
    Layout.Title(T("Manage Territory Hierarchies"));
}

@using (Html.BeginFormAntiForgeryPost()) {
    @Html.ValidationSummary();

    if (Model.AllowedHierarchyTypes.Any()) {
        <div class="manage">
            @Html.ActionLink(T("Add a Hierarchy").Text, 
                "CreateHierarchy", 
                new { Area = "Nwazet.Commerce", ReturnUrl = Request.RawUrl, typeName = Model.AllowedHierarchyTypes.Count() == 1 ? Model.AllowedHierarchyTypes.FirstOrDefault().Name : ""}, 
                new { @class = "button primaryAction" })
        </div>
    }

    <fieldset>
        <table class="items" summary="@T("This is a table of the Hierarchy items you are allowed to manage.")">

        </table>
    </fieldset>
}
