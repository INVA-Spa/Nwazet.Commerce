@using Nwazet.Commerce.Models
@{
    var items = (IEnumerable<CheckoutItem>)Model.OrderedProducts;
    var creationDate = (DateTime?)(((dynamic)Model.Order.ContentItem).CommonPart.CreatedUtc);
}
<div class="order-contents">@(Html.Raw(String.Join(", ", items.Select(i => String.Format(T("{0} &times; {1}").Text, i.Quantity, i.Title)))))</div>
<div class="order-metadata">@T("Ordered {0} ({1})", Display.DateTimeRelative(dateTimeUtc: creationDate), Display.DateTime(DateTimeUtc: creationDate))</div>