@model CriterionEditViewModel
@using Nwazet.Commerce.Models;
@using Nwazet.Commerce.ViewModels;

@{
    Layout.Title = T("Edit Criterion - {0}", Model.Criterion.Name);
}

@Html.ValidationSummary()

<h2>@Model.Criterion.Name</h2>
<span class="hint">@Model.Criterion.Description</span>

@using (Html.BeginFormAntiForgeryPost()) {

    <fieldset>
        @Html.LabelFor(m => m.Description, T("Description"))
        @Html.TextBoxFor(m => m.Description, new { @class = "text medium" })
        <span class="hint">@T("You may optionally give a description to this criterion, to be used in the dashboard screens.")</span>
    </fieldset>

    @* Render the dynamic form *@
    if (Model.Form != null) {
        <fieldset>
            @DisplayChildren(Model.Form)
        </fieldset>
    }

    @Display.TokenHint()

    <fieldset>
        <button class="primaryAction" type="submit">@T("Save")</button>
    </fieldset>
}